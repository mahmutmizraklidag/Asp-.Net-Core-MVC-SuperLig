@model SuperLig.Entities.League

@{
    ViewData["Title"] = "Lig Sil";
}

<h1>Lig Sil</h1>

<div>
    <h4>League</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="/img/@Model.Image" alt="" height="75" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <h5>Ligi Silmek İstediğinizden Emin Misiniz?</h5>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger mt-2" /> |
        <a class="btn btn-warning mt-2" asp-action="Index">Listeye Dön</a>
    </form>
</div>
